@using DigitalUpskills.Models
@using DigitalUpskills.Utills
@{

    Layout = "~/views/shared/_LayoutUser.cshtml";
    Model1 db = new Model1();
    tbl_Student student = CurrentUser.CurrentStudent;
}


<section class="page-header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="content">
                    <h1 class="page-name">Digital Upskills</h1>
                    <ol class="breadcrumb">
                        <li><a href="@Url.Action("IndexUser","Home")">Home</a></li>
                        <li class="active">Dashboard</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="user-dashboard page-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ul class="list-inline dashboard-menu text-center">
                    <li><a class="active" href="@Url.Action("StudentDashboard","Accounts")">Dashboard</a></li>
                    <li><a href="@Url.Action("RegisterdCourses","Accounts")">Registered Courses</a></li>
                    <li><a href="@Url.Action("DisplayBookmark","Bookmark")">My Bookmark</a></li>
                    <li><a href="@Url.Action("Edit","Accounts", new{id= CurrentUser.CurrentStudent.Student_Id})" )">Manage Account</a></li>
                </ul>
                <div class="dashboard-wrapper dashboard-user-profile">
                    <div class="media">
                        <div class="pull-left text-center" href="#!">
                            @if (CurrentUser.CurrentStudent.Student_Image != null)
                            {
                                <img style="height:160px" class="media-object user-img" src="@Url.Content(CurrentUser.CurrentStudent.Student_Image)" alt="Image">

                            }
                            else
                            {
                                <img style="height:120px;width:150px" class="media-object user-img" src="~/Content/Projectpic/StudentAvater.png" />
                            }
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                                Change Image
                            </button>
                        </div>
                        <div class="media-body">
                            <ul class="user-profile-list">
                                <li><span>Full Name:</span>@CurrentUser.CurrentStudent.Student_Name</li>
                                <li><span>Country:</span>@CurrentUser.CurrentStudent.Student_Address</li>
                                <li><span>Email:</span>@CurrentUser.CurrentStudent.Student_Gmail</li>
                                <li><span>Phone:</span>@CurrentUser.CurrentStudent.Student_PhoneNo</li>
 
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



