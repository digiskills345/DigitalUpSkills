@{
    Layout = "~/views/shared/_LayoutUser.cshtml";
}
<h2 class="text-center">LoginAdmin</h2>
<h2 class="text-center text-danger">@ViewBag.loginerror</h2>
<div class="unix-login">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-offset-3">
                <div class="login-content-centre">
                    <div class="login-logo">
                        <a href="index.html"><span>Login Your Account</span></a>
                    </div>
                    <div class="login-form col-md-offset-2">
                        <h4>Administratior Login</h4>
                        <form>
                            <div class="form-group">
                                <label>Email address</label>
                                <input type="email" class="form-control" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label>Password</label>
                                <input type="password" class="form-control" placeholder="Password">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox"> Remember Me
                                </label>
                                <label class="pull-right">
                                    <a href="#">Forgotten Password?</a>
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary btn-flat col-md-offset-5 text-center">Sign In</button>
                            @*<button type="submit" class="btn btn-primary btn-flat m-b-30 m-t-30 text-center ">Sign in</button>*@
                            <div class="social-login-content">
                                <div class="social-button">
                                    <button type="button" class="btn btn-primary bg-facebook btn-flat btn-addon m-b-10"><i class="facebook"></i>Sign in with facebook</button>
                                    <button type="button" class="btn btn-primary bg-twitter btn-flat btn-addon m-t-10"><i class="ti-twitter"></i>Sign in with twitter</button>
                                </div>
                            </div>
                            <div class="register-link m-t-15 text-center">
                                <p>Don't have account ? <a href="#"> Sign Up Here</a></p>
                            </div>
                        </form>
                </div>
                    <footer class="login-pf-page-footer m-t-15 text-center">
                        <ul class="login-pf-page-footer-links list-unstyled">
                            <li>
                                <a class="login-pf-page-footer-link" href="#">1.Terms of Use</a>&nbsp; &nbsp;
                                <a class="login-pf-page-footer-link" href="#">2.Help</a>&nbsp; &nbsp;
                                <a class="login-pf-page-footer-link" href="#">3.Privacy Policy</a>
                        </ul>
                    </footer>
                </div>
            </div>
        </div>
    </div>
</div>

