                                        <tr class="service">
                                            <td class="tableitem">
                                                <p class="itemtext">@Model.tbl_Course.Course_Name</p>
                                            </td>
                                            <td class="tableitem">
                                                <p class="itemtext">@Model.tbl_Course.Course_Fee</p>
                                            </td>
                                            <td class="tableitem">
                                                <p class="itemtext">@Model.tbl_Course.Course_Duration</p>
                                            </td>
                                            <td class="tableitem">
                                                <p class="itemtext">@Model.tbl_Course.Course_Fee</p>
