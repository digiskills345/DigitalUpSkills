@using DigitalUpskills.Models

@{ Layout = "~/views/shared/_LayoutUser.cshtml";
    Model1 db = new Model1();
}

<aside id="fh5co-hero">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url('../../Content/Projectpic/course (4).jpeg');">
                <div class="overlay-gradient"></div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 text-center slider-text">
                            <div class="slider-text-inner">
                                <h1 class="heading-section">Our Slides</h1>

                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>

<div id="fh5co-course">
    <div class="container">
        <div class="row animate-box">
            <div class="col-md-6 col-md-offset-3 text-center fh5co-heading">
                <h2>Our Slides</h2>
                <p>Here are available different courses for enhance student's skills and knowledge</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in db.tbl_Slide)
            {
                if (ViewData["catid"] == null || item.Course_Fid == (int)ViewData["sid"])
                {
                    <div class="col-md-6 animate-box">
                        <div class="course">
                            @*<a href="#" class="course-img">
                                <img src="@Url.Content(item.s)" style="width:100% ;height: 200px">
                            </a>*@
                            <div class="desc">
                                <h3><a href="#">@item.Slide_Name</a></h3>
                                <h3><a href="#">@item.Slide_Detail</a></h3>
                                <a href="#" class="course-img">
                                    <img src="@Url.Content(item.Slide_PDF)" class="img-thumbnail" style="width:200% ;height: 200px">
                                </a>
                            </div>
                        </div>
                    </div>
                }

                else if (item.Course_Fid == (int)(ViewData["sid"]))
                {
                    <div class="col-md-6 animate-box">
                        <div class="course">
                            @*<a href="#" class="course-img">
                                <img src="@Url.Content(item.Course_Image)" style="width:100% ;height: 200px">

                            </a>*@
                            <div class="desc">
                                <h3><a href="#">@item.Slide_Name</a></h3>
                                <h3><a href="#">@item.Slide_Detail</a></h3>
                                <a href="#" class="course-img">
                                    <img src="@Url.Content(item.Slide_PDF)" class="img-thumbnail" style="width:200% ;height: 200px">
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>


