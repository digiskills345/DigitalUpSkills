</aside>
<div id="fh5co-course-categories">
    <div class="container">
        <div class="row animate-box">
            <div class="col-md-6 col-md-offset-3 text-center fh5co-heading">
                <h2>Course categories</h2>
                <p>Here are available different categories of courses to enhance student's skills and knowledge!</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in db.tbl_CourseCategory)
            {
                <div class="col-lg-4 col-md-4">
                    <div class="fh5co-blog animate-box">
                        <a href="#" class="course-img">
                            <img src="@Url.Content(item.CourseCategory_Image)" class="img-thumbnail" style="width:100% ;height: 200px">
                        </a>
                        <div class="blog-text">
                            <h3><a href="#">@item.CourseCategory_Name</a></h3>
                            <a href="@Url.Action("Courses", "Home", new { id = item.CourseCategory_Id })">@item.CourseCategory_Name <small class="text-muted"> (@item.tbl_Course.Count)</small></a>
                            <p>@item.CourseCategory_Details</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div id="fh5co-counter" class="fh5co-counters" style="background-color:cornflowerblue" ;>
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <div class="row">
                    <div class="col-md-3 col-sm-6 text-center animate-box">
                        <span class="icon"><i class="icon-world"></i></span>
                        <span class="fh5co-counter js-counter" data-from="0" data-to="3297" data-speed="5000" data-refresh-interval="50"></span>
                        <span class="fh5co-counter-label">Foreign Followers</span>
                    </div>
                    <div class="col-md-3 col-sm-6 text-center animate-box">
                        <span class="icon"><i class="icon-study"></i></span>
                        <span class="fh5co-counter js-counter" data-from="0" data-to="3700" data-speed="5000" data-refresh-interval="50"></span>
                        <span class="fh5co-counter-label">Students Enrolled</span>
                    </div>
                    <div class="col-md-3 col-sm-6 text-center animate-box">
                        <span class="icon"><i class="icon-bulb"></i></span>
                        <span class="fh5co-counter js-counter" data-from="0" data-to="5034" data-speed="5000" data-refresh-interval="50"></span>
                        <span class="fh5co-counter-label">Classes Complete</span>
                    </div>
                    <div class="col-md-3 col-sm-6 text-center animate-box">
                        <span class="icon"><i class="icon-head"></i></span>
                        <span class="fh5co-counter js-counter" data-from="0" data-to="1080" data-speed="5000" data-refresh-interval="50"></span>
                        <span class="fh5co-counter-label">Certified Teachers</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="fh5co-course">
    <div class="container">
        <div class="row animate-box">
            <div class="col-md-6 col-md-offset-3 text-center fh5co-heading">
                <h2>Our Course</h2>
                <p>Here are available different courses to enhance student's skills and knowledge!</p>
            </div>
        </div>

        <div class="row">
            @foreach (var item in db.tbl_Course.Where(x=>x.Is_Approved==true))
            {
                <div class="col-lg-4 col-md-4">
                    <div class="fh5co-blog animate-box">
                        <a href="#" class="course-img">
                            <img src="@Url.Content(item.Course_Image)" class="img-thumbnail" style="width:100% ;height: 200px">
                        </a>
                        <div class="blog-text">
                            <h3><a href="#">@item.Course_Name</a></h3>
                            <p>@item.Course_Fee</p>
                            <a href="@Url.Action("CourseDetail", "Course", new { id = item.Course_Id })" class="btn btn-primary">CourseDetail</a>
                        </div>
                    </div>
                </div>
            }
        </div>
           </div>
          </div>



