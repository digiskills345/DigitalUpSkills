@using DigitalUpskills.Models

@{ Layout = "~/views/shared/_LayoutUser.cshtml";
    Model1 db = new Model1();
}

<aside id="fh5co-hero">
    <div class="flexslider">
        <ul class="slides">
            <li style="background-image: url('../../Content/Projectpic/course (4).jpeg');">
                <div class="overlay-gradient"></div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 text-center slider-text">
                            <div class="slider-text-inner">
                                <h1 class="heading-section">Our Course</h1>

                            </div>
                        </div>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</aside>

<div id="fh5co-course">
    <div class="container">
        <div class="row animate-box">
            <div class="col-md-6 col-md-offset-3 text-center fh5co-heading">
                <h2>Our Course</h2>
                <p>Here are available different courses for enhance student's skills and knowledge</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in db.tbl_Course)
            {
                if (ViewData["catid"] == null || item.CourseCategory_Fid == (int)ViewData["catid"])
                {
                    <div class="col-md-6 animate-box">
                        <div class="course">
                            <a href="#" class="course-img">
                                <img src="@Url.Content(item.Course_Image)" style="width:100% ;height: 200px">
                            </a>
                            <div class="desc">
                                <h3><a href="#">@item.Course_Name</a></h3>
                                <h3><a href="#">@item.Course_Code</a></h3>
                                <p>@item.Course_Detail</p>
                                <span><a href="@Url.Action("Addtocart","Cart",new { id=item.Course_Id})" class="btn btn-primary btn-sm btn-course">Add to Cart</a></span>
                            </div>
                        </div>
                    </div>
                }

                else if (item.CourseCategory_Fid == (int)(ViewData["catid"]))
                {
                    <div class="col-md-6 animate-box">
                        <div class="course">
                            <a href="#" class="course-img">
                                <img src="@Url.Content(item.Course_Image)" style="width:100% ;height: 200px">

                            </a>
                            <div class="desc">
                                <h3><a href="#">@item.Course_Name</a></h3>
                                <h3><a href="#">@item.Course_Code</a></h3>
                                <p>@item.Course_Detail</p>
                                <span><a href="@Url.Action("Checkout","Cart", new { id=item.Course_Id})" class="btn btn-primary btn-sm btn-course">Take Course</a></span>

                            </div>
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</div>


