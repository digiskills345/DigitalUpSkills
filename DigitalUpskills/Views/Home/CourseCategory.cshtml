@using DigitalUpskills.Models

@{ Layout = "~/views/shared/_LayoutUser.cshtml";
    Model1 db = new Model1();
}

<aside id="fh5co-hero">
    <div class="container">
        <div class="flexslider">
            <ul class="slides">
                <li style="background-image: url('../../Content/Projectpic/category final.jpg'); ">
                    <div class="overlay-gradient"></div>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-8 col-md-offset-2 text-center slider-text">
                                <div class="slider-text-inner">
                                    <h1 class="heading-section">COURSE CATEGORY</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
</aside>

<div id="fh5co-course-categories">
    <div class="container">
        <ul class="slides">
            <li style="background-image: url(images/img_bg_4.jpg);">
                <div class="row animate-box">
                    <div class="col-md-6 col-md-offset-3 text-center fh5co-heading">
                        <h2>
                            Course categories
                            <a href="@Url.Action("CourseCategory","Home", new { id="null" })" class="list-group-horizontal-sm-action"> <small class="text-muted"> (@db.tbl_Course.Count()) </small> </a>
                        </h2>

                        <p>Here are available different categories of courses to enhance student's skills and knowledge!</p>
                    </div>
                </div>
            </li>
        </ul>
    </div>
    </div>
 
        <div class="row">
            @foreach (var item in db.tbl_CourseCategory)
            {
                <div class="col-lg-4 col-md-4">
                    <div class="fh5co-blog animate-box">
                        <a href="#" class="course-img">
                            <img src="@Url.Content(item.CourseCategory_Image)" class="img-thumbnail" style="width:100% ;height: 200px">
                        </a>
                        <div class="blog-text">
                            <h3><a href="#">@item.CourseCategory_Name</a></h3>
                            <a href="@Url.Action("Courses", "Home", new { id = item.CourseCategory_Id })">@item.CourseCategory_Name <small class="text-muted"> (@item.tbl_Course.Count)</small></a>
                            <p>@item.CourseCategory_Details</p>
                        </div>
                    </div>
                </div>
            }
        </div>